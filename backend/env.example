
# MINUS VOICE ASSISTANT - ENVIRONMENT CONFIGURATION

# ==============================================
# LLM MODEL SELECTION (Choose Your AI Brain!)
# ==============================================

# Choose your LLM model:
# - "gemma" = Gemma 3n (FREE) - Good for basic commands
# - "qwen" = Qwen3 32B (Premium ~RM50-80) - Enhanced reasoning
LLM_MODEL=gemma

# Gemma 3n (FREE) - Google AI API
GOOGLE_API_KEY=your_google_ai_api_key_here

# Qwen3 32B (Premium) - OpenRouter API  
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Alternative Qwen3 32B - Groq API (faster inference)
GROQ_API_KEY=your_groq_api_key_here

# ==============================================
# GOOGLE SERVICES INTEGRATION
# ==============================================

# Gmail API - OAuth2 Setup Required
GMAIL_CREDENTIALS_PATH=credentials.json
GMAIL_TOKEN_DIR=tokens/

# Google Calendar API - OAuth2 Setup Required  
CALENDAR_CREDENTIALS_PATH=calendar_credentials.json
CALENDAR_TOKEN_DIR=tokens/

# Google Docs API - OAuth2 Setup Required
DOCS_CREDENTIALS_PATH=docs_credentials.json
DOCS_TOKEN_DIR=tokens/

# ==============================================
# VOICE SYSTEM CONFIGURATION
# ==============================================

# Voice Server Settings
VOICE_SERVER_PORT=8001
VOICE_TIMEOUT_SECONDS=3
WAKE_WORDS=hey minus,minus,okay minus
STOP_WORDS=stop,cancel,never mind

# Audio Processing
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=1
VOICE_ACTIVATION_THRESHOLD=0.5

# ==============================================
# DATABASE & STORAGE
# ==============================================

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================

# Environment Mode
ENVIRONMENT=development
DEBUG_MODE=true

# Mock Mode Override (force mock even with API keys)
FORCE_MOCK_MODE=false

# Logging Level
LOG_LEVEL=INFO

# ==============================================
# USAGE INSTRUCTIONS
# ==============================================

# 1. QUICK START (FREE):
#    - Set LLM_MODEL=gemma
#    - Get free Google AI API key
#    - Leave other keys empty for mock mode

# 2. ENHANCED MODE (Premium):
#    - Set LLM_MODEL=qwen  
#    - Get OpenRouter API key for Qwen3 32B
#    - Set up Gmail/Calendar OAuth for real data

# 3. PRODUCTION MODE:
#    - Set ENVIRONMENT=production
#    - Configure all real API keys
#    - Set DEBUG_MODE=false

# ==============================================
# COST ESTIMATION
# ==============================================

# Gemma 3n: FREE (up to 14,400 requests/day)
# Qwen3 32B: ~$0.10/M input, $0.30/M output
# Estimated monthly cost for Qwen3 32B: RM50-80

# ==============================================
# ADDITIONAL PLATFORMS (Future)
# ==============================================

# Telegram Bot API
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# WhatsApp Business API  
WHATSAPP_API_KEY=your_whatsapp_api_key_here

# ==============================================
# AI Services
# ==============================================

